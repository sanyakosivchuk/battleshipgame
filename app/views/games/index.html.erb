<div class="absolute top-4 right-4 z-50">
  <%= render "shared/locale_selector" %>
</div>

<div data-controller="dashboard" class="mx-auto w-full max-w-4xl px-6">
  <div class="bg-gradient-to-br from-blue-500 to-indigo-600 text-white rounded-2xl shadow-xl overflow-hidden">
    <div class="px-8 py-6 flex flex-col gap-6 items-center">
      <%= image_tag "logo.png", alt: t("app_name"), class: "w-32 mb-2" %>
      <h1 class="text-3xl font-semibold"><%= t("dashboard.title") %></h1>
      <p class="text-sm text-blue-200"><%= t("dashboard.tagline") %></p>

      <div class="w-full flex flex-col md:flex-row gap-4 mt-4">
        <button data-action="dashboard#quickMatch"
                class="flex-1 bg-white/20 hover:bg-white/30 text-white py-3 rounded-lg font-bold transition">
          üöÄ <%= t("dashboard.quick_match") %>
        </button>

        <%= button_to t("dashboard.create_private_game"), games_path,
              method: :post,
              class: "flex-1 bg-white/20 hover:bg-white/30 text-white py-3 rounded-lg font-bold transition" %>
      </div>

      <div class="w-full flex items-center justify-between mt-6">
        <h2 class="text-xl font-semibold"><%= t("dashboard.open_games") %></h2>
        <span class="text-lg font-semibold flex items-center space-x-1">
          <span>üèÜ</span>
          <span><%= t("dashboard.your_rating") %>:</span>
          <span class="font-bold"><%= current_user.rating %></span>
        </span>
      </div>

      <div class="w-full overflow-y-auto max-h-[50vh]">
        <table class="w-full divide-y divide-white/30">
          <thead class="bg-white/10 sticky top-0">
            <tr>
              <th class="px-4 py-2 text-left text-sm uppercase"><%= t("dashboard.host") %></th>
              <th class="px-4 py-2 text-left text-sm uppercase"><%= t("dashboard.rating") %></th>
              <th class="px-4 py-2 text-left text-sm uppercase"><%= t("dashboard.created") %></th>
              <th class="px-4 py-2"></th>
            </tr>
          </thead>
          <tbody>
            <!-- Stimulus fills this -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

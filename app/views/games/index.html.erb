<!-- app/views/games/index.html.erb -->
<div data-controller="dashboard" class="mx-auto w-full max-w-4xl px-6">
  <div class="bg-gradient-to-br from-blue-500 to-indigo-600 text-white rounded-2xl shadow-xl overflow-hidden">

    <div class="px-8 py-6 flex flex-col gap-6">

      <div class="flex items-center justify-between">
        <h1 class="text-3xl font-semibold">Battleship Dashboard</h1>
        <span class="text-lg font-semibold">Rating: <%= current_user.rating %></span>
      </div>

      <div class="flex flex-col md:flex-row gap-4">
        <button data-action="dashboard#quickMatch"
                class="flex-1 bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-lg font-bold">
          Quick Match
        </button>

        <%= button_to "Create Private Game", games_path,
              method: :post,
              class: "flex-1 bg-white/10 hover:bg-white/20 text-white py-3 rounded-lg font-bold" %>
      </div>

      <h2 class="text-xl font-semibold mt-4">Open Games</h2>
      <div class="overflow-y-auto max-h-[50vh]">
        <table class="w-full divide-y divide-white/30">
          <thead class="bg-white/10 sticky top-0">
            <tr>
              <th class="px-4 py-2 text-left text-sm uppercase">Host</th>
              <th class="px-4 py-2 text-left text-sm uppercase">Rating</th>
              <th class="px-4 py-2 text-left text-sm uppercase">Created</th>
              <th class="px-4 py-2"></th>
            </tr>
          </thead>
          <tbody>
            <!-- filled by Stimulus -->
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

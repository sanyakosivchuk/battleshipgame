<div class="min-h-screen flex">
  <div class="w-full md:w-1/2 flex flex-col justify-center bg-gradient-to-br from-blue-400 to-blue-700 p-12 space-y-8">
    <div class="max-w-lg mx-auto space-y-6">
      <h1 class="text-4xl font-bold text-white">Welcome Aboard, Commander!</h1>
      <p class="text-lg text-white/90">
        Log in to chart your course and dominate the high seas in Battleship.
      </p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= f.email_field :email,
              autofocus: true,
              required: true,
              placeholder: "Email Address",
              class: "w-full px-6 py-4 text-lg rounded-xl bg-white placeholder-gray-400 focus:outline-none focus:ring-4 focus:ring-white/50" %>

        <%= f.password_field :password,
              required: true,
              autocomplete: "current-password",
              placeholder: "Password",
              class: "w-full px-6 py-4 text-lg rounded-xl bg-white placeholder-gray-400 focus:outline-none focus:ring-4 focus:ring-white/50" %>

        <div class="flex items-center justify-between text-white">
          <label class="inline-flex items-center">
            <%= f.check_box :remember_me, class: "h-5 w-5 text-blue-600 bg-white border rounded" %>
            <span class="ml-2">Remember me</span>
          </label>
          <%= link_to "Forgot password?", new_password_path(resource_name), class: "underline hover:text-white/80" %>
        </div>

        <%= f.submit "Log in",
              class: "w-full py-4 text-lg font-semibold rounded-xl bg-white text-blue-600 hover:bg-white/90 transition" %>
      <% end %>

      <p class="text-center text-white">
        Donâ€™t have an account?
        <%= link_to "Sign up now", new_registration_path(resource_name),
              class: "font-bold underline hover:text-white/80" %>
      </p>
    </div>
  </div>

  <div class="hidden md:block w-1/2">
    <%= image_tag "background.png", class: "object-cover w-full h-full" %>
  </div>
</div>

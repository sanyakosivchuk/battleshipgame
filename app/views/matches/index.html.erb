<div class="mx-auto w-full max-w-3xl px-6">
  <div class="bg-gradient-to-br from-blue-500 to-indigo-600 text-white rounded-2xl shadow-xl overflow-hidden">
    <div class="px-6 py-4">
      <h1 class="text-2xl font-semibold"><%= t("match_history.title") %></h1>
    </div>

    <div class="overflow-y-auto max-h-[60vh]">
      <ul class="divide-y divide-white/30 px-6">
        <% @matches.each do |m| %>
          <li class="flex justify-between items-center py-3">
            <span class="text-sm font-semibold"><%= m.finished_at.strftime("%d %b %Y, %H:%M") %></span>
            <span class="text-sm font-semibold"><%= "#{t("match_history.vs")} #{(m.player1 == current_user ? m.player2.email : m.player1.email)}" %></span>
            <span class="text-sm font-semibold <%= m.winner == current_user ? "text-green-300" : "text-red-300" %>">
              <%= m.winner == current_user ? t("match_history.win") : t("match_history.loss") %>
            </span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

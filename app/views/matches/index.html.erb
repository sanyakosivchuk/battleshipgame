<div class="mx-auto w-full max-w-3xl px-6">
  <div class="bg-gradient-to-br from-blue-500 to-indigo-600 text-white rounded-2xl shadow-xl overflow-hidden">
    <div class="px-6 py-4">
      <h1 class="text-2xl font-semibold">Match History</h1>
    </div>

    <div class="overflow-y-auto max-h-[60vh]">
      <ul class="divide-y divide-white/30 px-6">
        <% @matches.each do |m| %>
          <li class="flex justify-between items-center py-3">
            <span class="text-sm font-semibold">
              <%= m.finished_at.strftime("%d %b %Y, %H:%M") %>
            </span>
            <span class="text-sm font-semibold">
              vs <%= (m.player1 == current_user ? m.player2.email : m.player1.email) %>
            </span>
            <% if m.winner == current_user %>
              <span class="text-sm font-semibold text-green-300">WIN</span>
            <% else %>
              <span class="text-sm font-semibold text-red-300">LOSS</span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
